  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Node",
      "runtimeExecutable": "meteor",
      "runtimeArgs": [
        "--settings=.env/settings.json",
        "--exclude-archs=web.browser.legacy,web.cordova",
        "--raw-logs"
      ],
      "env": {
        "ROOT_URL": "http://localhost:3000",
      },
      "outputCapture": "std",
      "restart": true,
      "timeout": 60000
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug: Browser",
      "sourceMapPathOverrides": {
        "meteor://ðŸ’»app/*": "${workspaceFolder}/*"
      },
      "url": "http://localhost:3000",
      "userDataDir": "${env:HOME}/.vscode/chrome"
    }
  ]
}